<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="79dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/arrow_left"
        android:padding="0dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="268dp"
        android:layout_height="67dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="94dp"
        android:text="Actividades"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:background="@drawable/grey_border"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="172dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtNUser"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:hint="Nro Socio"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:hint="Nombre y Apellido"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtId"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:hint="DNI"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            android:background="@drawable/small_grey_border"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkBoxFuncional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Funcional | Costo:$30000 | Cupo:18"
                android:textSize="19dp"
                android:layout_marginBottom="-10dp"/>

            <CheckBox
                android:id="@+id/checkBoxCrossfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crossfit | Costo:$30000 | Cupo:18"
                android:textSize="19dp"
                android:layout_marginBottom="-10dp"/>

            <CheckBox
                android:id="@+id/checkBoxMusculacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MusculaciÃ³n | Costo:$30000 | Cupo:18"
                android:textSize="18dp"
                android:layout_marginBottom="-10dp"/>

            <CheckBox
                android:id="@+id/checkBoxSpinning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spinning | Costo:$30000 | Cupo:18"
                android:textSize="19dp"
                android:layout_marginBottom="-10dp"/>

            <CheckBox
                android:id="@+id/checkBoxYoga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yoga | Costo:$30000 | Cupo:18"
                android:textSize="19dp"
                android:layout_marginBottom="-10dp"/>

            <CheckBox
                android:id="@+id/checkBoxPilates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilates | Costo:$30000 | Cupo:18"
                android:textSize="19dp"
                android:layout_marginBottom="-10dp"/>

            <CheckBox
                android:id="@+id/checkBoxZumba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zumba | Costo:$30000 | Cupo:18"
                android:textSize="19dp"
                android:layout_marginBottom="-10dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/txtImporte"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:hint="Importe"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnInscribir"
            android:layout_width="146dp"
            android:layout_height="74dp"
            android:background="@drawable/button_border"
            android:text="Inscribir"
            android:textSize="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>