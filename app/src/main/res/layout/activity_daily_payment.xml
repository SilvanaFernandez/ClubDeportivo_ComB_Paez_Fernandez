<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyPaymentActivity"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="79dp"
        android:layout_height="47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp">

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/arrow_left"
            android:padding="15dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="Botón para volver"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="268dp"
        android:layout_height="67dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="94dp"
        android:text="Cobro Diario"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="586dp"
        android:background="@drawable/grey_border"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="0dp">

            <EditText
                android:id="@+id/txtNroNSocio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_weight="1"
                android:hint="Nro No Socio"
                android:inputType="date"
                android:textSize="20dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content" /> <!-- Separador -->

            <EditText
                android:id="@+id/txtFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:hint="Fecha"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:hint="Nombre y Apellido"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtId"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:hint="DNI"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/small_grey_border"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkBoxFuncional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Funcional | Costo:$30000 | Cupo:18"
                android:textSize="19dp" />

            <CheckBox
                android:id="@+id/checkBoxCrossfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Crossfit | Costo:$30000 | Cupo:18"
                android:textSize="19dp" />

            <CheckBox
                android:id="@+id/checkBoxMusculacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Musculación | Costo:$30000 | Cupo:18"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/checkBoxSpinning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Spinning | Costo:$30000 | Cupo:18"
                android:textSize="19dp" />

            <CheckBox
                android:id="@+id/checkBoxYoga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Yoga | Costo:$30000 | Cupo:18"
                android:textSize="19dp" />

            <CheckBox
                android:id="@+id/checkBoxPilates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Pilates | Costo:$30000 | Cupo:18"
                android:textSize="19dp" />

            <CheckBox
                android:id="@+id/checkBoxZumba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="Zumba | Costo:$30000 | Cupo:18"
                android:textSize="19dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtImporte"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:hint="Importe"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="Registrar"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btnCarnet"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="Carnet"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>