<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/white">


    <Button
        android:id="@+id/btnExit"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_border"
        android:padding="0dp"
        android:text="Salir"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginRid="150dp"
        app:layout_constraintMarginTop="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="268dp"
        android:layout_height="67dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="94dp"
        android:text="Club Deportivo"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="177dp"
        android:background="@drawable/grey_border"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="364dp"
            android:layout_height="135dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/small_grey_border">

            <Button
                android:id="@+id/btnSocios"
                android:layout_width="155dp"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_border"
                android:text="Socios"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnNoSocios"
                android:layout_width="155dp"
                android:layout_height="75dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_border"
                android:text="No Socios"
                android:textSize="20dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/small_grey_border">

            <Button
                android:id="@+id/btnCuotas"
                android:layout_width="155dp"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_border"
                android:text="Cuotas"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnActividades"
                android:layout_width="155dp"
                android:layout_height="75dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_border"
                android:text="Actividades"
                android:textSize="19dp" />

            <Button
                android:id="@+id/btnCobroDiario"
                android:layout_width="155dp"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/button_border"
                android:text="Cobro Diario"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnVtos"
                android:layout_width="155dp"
                android:layout_height="75dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/button_border"
                android:text="Reporte Vtos"
                android:textSize="20dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/textTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Registro"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="210dp"
            android:text="GestiÃ³n"
            android:textSize="20dp"
            android:textStyle="bold" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>