<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="79dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/arrow_left"
        android:padding="10dp"
        android:src="@drawable/arrow_left"
        android:contentDescription="BotÃ³n para volver"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="268dp"
        android:layout_height="67dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="94dp"
        android:text="Recibo de pago"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="600dp"
        android:background="@drawable/grey_border"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="125dp">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="470"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/beige_border"
            android:padding="5dp">

            <EditText
                android:id="@+id/txtNVoucher"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:hint="Nro Recibo"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtDate"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="Fecha"
                android:inputType="Datetime"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="Nombre y Apellido Socio/No Socio"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtId"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="DNI"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtAct1"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:hint="Actividad 1"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtAct2"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="Actividad 2"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtAct3"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="Actividad 3"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtTotal"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="Monto Total"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtMPago"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:hint="Medio de Pago"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="Registrar"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btnCarnet"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:text="Carnet"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>